<body>
<div class="top-content">
    <div class="inner-bg">
        <div class="container">
            <%- include ../global/header.ejs %>
            <div class="row" id="login-div">
                <div class="row" id="info-div">
                    <div class="col-sm-6 col-sm-offset-3 form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>基本信息</h3>

                                <p><span id="msgDiv" class="msg"></span></p>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-info-circle"></i>
                            </div>
                        </div>
                        <div class="form-bottom">
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon">用户名</span>
                                <span id="playerName" class="form-control"><%- username %></span>
                                <span class="input-group-btn">
                                    <button id="logout" class="btn btn-red" type="button">退出登陆</button>
                                </span>
                            </div>
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon">&nbsp;&nbsp;皮肤&nbsp;&nbsp;</span>
                                <span id="skinsModel" class="form-control"><%- skinurl %></span>
                                <span class="input-group-btn">
                                    <button id="skinsModelUpload" class="btn btn-blue" type="button">上传皮肤</button>
                                </span>
                            </div>
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon">&nbsp;&nbsp;披风&nbsp;&nbsp;</span>
                                <span id="capeModel" class="form-control"><%- capeurl %></span>
                                <span class="input-group-btn">
                                    <button id="capeModelUpload" class="btn btn-blue" type="button">上传披风</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" id="img-div" style="display: none">
                    <div class="col-sm-6 col-sm-offset-3 form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3>预览</h3>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-image"></i>
                            </div>
                        </div>
                        <div class="form-bottom">
                            <img id="preview-img" src=""/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include ../global/footer.ejs %>
    </div>
    <input type="file" name='file' id='filechoose' style="display: none;"/>
</div>

<!-- Include bottom.ejs Start-->
<%- include ../include/bottom.ejs %>
<!-- Include bottom.ejs End-->

</body>
</html>
